{
  // Interface
  // "window.title": "${activeEditorMedium}",
  "window.commandCenter": false,
  "window.zoomLevel": 0,
  "workbench.iconTheme": "symbols",
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "left",
  "workbench.layoutControl.enabled": false,
  "workbench.editor.enablePreview": false,
  "workbench.editor.labelFormat": "short",
  "workbench.tree.indent": 18,
  "editor.lineNumbers": "on",
  "editor.minimap.enabled": false,
  "editor.bracketPairColorization.enabled": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "on",
  "explorer.compactFolders": false,
  "explorer.autoReveal": true,
  "breadcrumbs.enabled": true,
  "symbols.hidesExplorerArrows": false,
  // Font
  "editor.fontFamily": "Monaspace Neon, MonoLisa, Geist Mono, Monocraft, JetBrains Mono, IBM Plex Mono, Mononoki Nerd Font, Droid Sans Mono, Anonymous Pro, Operator Mono Book, Fira Code, Cascadia Code",
  "editor.fontLigatures": "'calt', 'liga', 'dlig', 'ss01', 'ss02'",
  "editor.fontSize": 14,
  "editor.lineHeight": 2,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  // Terminal
  // "terminal.integrated.fontFamily": "Monaspace Neon, MonoLisa, Monocraft, JetBrains Mono, IBM Plex Mono, Mononoki Nerd Font, Fira Code",
  "terminal.integrated.fontSize": 11,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  // Emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  // Biome
  "biome.semi": false,
  "biome.useTabs": true,
  "biome.singleQuote": true,
  "biome.trailingComma": "es5",
  "biome.printWidth": 100,
  // Formatting
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.defaultFormatter": "biomejs.biome",
  // Svelte
  "[svelte]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "svelte.enable-ts-plugin": true,
  // Git
  "diffEditor.renderSideBySide": true,
  // Tailwind
  "css.lint.unknownAtRules": "ignore",
  // +Todo
  "todo.timekeeping.finished.time": false,
  // GitLens
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.statusBar.enabled": false,
  // CodeSnap
  "codesnap.showWindowControls": false,
  "codesnap.showLineNumbers": false,
  "codesnap.shutterAction": "copy",
  "codesnap.containerPadding": "0",
  "codesnap.roundedCorners": false,
  "codesnap.boxShadow": "none",
  // XState
  "xstate.nestTypegenFiles": false,
  // CSS variables autocomplete
  "cssvar.files": ["./node_modules/open-props/open-props.min.css"],
  "cssvar.ignore": [],
  "cssvar.extensions": ["css", "postcss", "svelte", "tsx"],
  // Search
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.svelte-kit": true
  },
  "search.quickOpen.includeHistory": false,
  // Linked editing
  "editor.linkedEditing": true,
  // Respect keyboard mappings
  "workbench.editor.empty.hint": "hidden",
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  }
  // "workbench.activityBar.location": "hidden"
}
